<h1>User Profile</h1>
<table>
  <tr>
    <td>Name:</td>
    <td><%= [@user.first_name, @user.last_name].join(' ') %></td>
  </tr>
  <tr>
    <td>Username:</td>
    <td><%= @user.username %></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td><%= @user.email %></td>
  </tr>
</table>

<h2>Hosted Events</h2>
  <% @user.events.each do |e|%>
    <table>
      <tr>
        <td><strong>Title</strong></td>
        <td><strong>Host</strong></td>
        <td><strong>Location</strong><td>
        <td><strong>Date</strong><td>
        <td><strong>Time</strong><td>
      </tr>
        <td><%= e.title %></td>
        <td><%= [e.creator.first_name, e.creator.last_name].join(' ')%></td>
        <td><%= e.location %></td>
        <td><%= e.date %></td>
        <td><%= e.time %></td>
      <tr>
      </tr>
    </table>
  <% end %>
